    //styles for column headers
    .react-datagrid__header-wrapper
        flex 0 0 auto
        background $datagrid-header-background
        border-bottom $datagrid-header-border-width $datagrid-header-border-style $datagrid-header-border-color

        &.react-datagrid__header-wrapper--dragging
            .react-datagrid__header__cell:not(.react-datagrid__header__cell--drag)
                transition left 0.4s

    .react-datagrid__header__cell
        position relative
        font-weight $datagrid-column-header-font-weight

        .react-datagrid__inner

            display flex

            align-items center
            align-content flex-start
            flex-flow row

            height 100%


        .react-datagrid__content
            cursor $datagrid-header-cursor
            text-overflow ellipsis
            white-space nowrap
            overflow hidden

        &.react-datagrid__header__cell--sortable
            .react-datagrid__inner
                cursor pointer

        &.react-datagrid__header__cell--over
            background $datagrid-header-over-background

        //style for the sort icon
        .react-datagrid__header__cell__icon-sort-info
            display inline-block
            size 0px
            margin-left 10px
            border-left $datagrid-column-sort-icon-width solid transparent
            border-right $datagrid-column-sort-icon-width solid transparent

        &.react-datagrid__cell--asc
            .react-datagrid__header__cell__icon-sort-info
                border-bottom $datagrid-column-sort-icon-height solid $datagrid-column-sort-icon-color

        &.react-datagrid__cell--desc
            .react-datagrid__header__cell__icon-sort-info
                border-top $datagrid-column-sort-icon-height solid $datagrid-column-sort-icon-color

        //styles to be applied to the column header when it is dragged
        &.react-datagrid__cell--drag
            z-index 1
            background $datagrid-header-over-background
            border-right $datagrid-header-border-width $datagrid-header-border-style $datagrid-header-border-color
            border-left $datagrid-header-border-width $datagrid-header-border-style $datagrid-header-border-color
            // .react-datagrid__inner

        //styles for the small column resize handle
        .react-datagrid__header_column__resize
            display inline-block
            height 100%
            width 3px
            right 0px
            cursor e-resize
            top 0px
            position absolute
            z-index 10

        //make sure the last column does not have a resize handle visible
        //since resize handles are position to the right of every column
        &.z-last
            .react-datagrid__inner
                .react-datagrid__header_column__resize
                    display none !important

    //set left border correctly for each column header. (the first one should not have a left border)
    .react-datagrid__header .react-datagrid__header__cell:not(.react-datagrid__header__cell--first)
        border-left $datagrid-header-border-width $datagrid-header-border-style $datagrid-header-border-color

    .react-datagrid__header .react-datagrid__header__cell.react-datagrid__header__cell--last
        border-right $datagrid-header-border-width $datagrid-header-border-style $datagrid-header-border-color